<section class="hero">
    <div class="container">
        <h1>Free <%= categoryName %> Live Streams</h1>
        <p>Watch the best <%= categoryName %> live streams for free. Footybite coverage of all <%= categoryName %>
                    events.</p>

        <div class="hero-filters">
            <button class="hero-btn" onclick="triggerHeroFilter('soccer')">Watch Soccer</button>
            <button class="hero-btn" onclick="triggerHeroFilter('american-football')">Watch NFL</button>
            <button class="hero-btn" onclick="triggerHeroFilter('basketball')">Watch NBA</button>
            <button class="hero-btn" onclick="triggerHeroFilter('fighting')">Watch Boxing/UFC</button>
        </div>
    </div>
</section>

<div id="filter-engine-root" data-events='<%- JSON.stringify(events).replace(/' /g, "&#39;" ) %>' data-sport="<%=
        catSlug %>">
        <%- filterHtml %>
</div>

<section class="container">
    <div class="seo-content">
        <h2>Watch <%= categoryName %> Online Free</h2>
        <p>Footybite is the premier destination for <%= categoryName %> fans. We offer a wide range of free <%=
                    categoryName %> streams, from major leagues to international tournaments. Our goal is to provide a
                    seamless viewing experience for all <%= categoryName %> enthusiasts.</p>
        <p>Whether you call it Footybite, Fotybyte, or Footybyte, you can trust us to deliver the best <%= categoryName
                %> live streams available on the internet. Bookmark this page to stay updated with all upcoming <%=
                    categoryName %> matches.</p>
    </div>
</section>

<script>
    function triggerHeroFilter(sport) {
        // If we are on a category page and click a different sport, we should navigate
        const currentSport = '<%= catSlug %>';
        if (sport !== currentSport && sport !== 'all') {
            window.location.href = '/' + sport + '/';
            return;
        }

        const event = new CustomEvent('heroFilter', { detail: { sport } });
        window.dispatchEvent(event);

        const root = document.getElementById('filter-engine-root');
        if (root) {
            window.scrollTo({
                top: root.offsetTop - 100,
                behavior: 'smooth'
            });
        }
    }
</script>
<script src="/assets/client.iife.js"></script>